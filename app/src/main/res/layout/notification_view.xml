<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_60sdp">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/orderTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Order no. 3009 has been delivered"
            android:textColor="@color/notification_txt_color"
            android:textSize="@dimen/_11sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:fontFamily="@font/sofiaprosemibold"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:fontFamily="@font/sofiapromedium"
            android:gravity="end"
            android:layout_marginBottom="@dimen/_12sdp"
            android:text="17-02-2022, 17:00PM"
            android:textColor="@color/notification_txt_color"
            android:textSize="@dimen/_9sdp"
            app:layout_constraintBottom_toTopOf="@+id/view"
            app:layout_constraintEnd_toEndOf="parent" />


        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:layout_centerVertical="true"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#D8D8D8" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>